<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/item_recycler_language_dot_image_view"
        android:layout_width="@dimen/size_little_dot"
        android:layout_height="@dimen/size_little_dot"
        app:layout_constraintBottom_toBottomOf="@id/item_recycler_language_text_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_recycler_language_text_text_view"
        app:srcCompat="@drawable/ic_circle" />

    <TextView
        android:id="@+id/item_recycler_language_text_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_padding"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/normal_font_size"
        app:layout_constraintStart_toEndOf="@id/item_recycler_language_dot_image_view"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>