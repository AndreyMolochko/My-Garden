<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BaseButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="BaseButton.PrimaryButton">
        <item name="android:background">@drawable/background_primary_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="BaseButton.SecondaryButton">
        <item name="android:background">@drawable/background_secondary_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/medium_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorHeather</item>
        <item name="android:textSize">@dimen/edit_text_font_size</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:textSize">@dimen/normal_font_size</item>
    </style>

</resources>
